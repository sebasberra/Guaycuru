{% block selectTablestyles %}
<!-- BLOQUE STYLES -->
<style>
#feedback {
	font-size: 1.4em;
}
/*#selectable {cursor: pointer;}*/
#selectable .ui-selecting {
	background: #990000;
}

#selectable .ui-selected {
	background: #990000;
	color: white;
}

#selectable {
	list-style-type: none;
	margin: 0;
	padding: 0;
	width: 100%;
}

#selectable li {
	margin: 3px;
	padding: 1px;
	float: left;
	width: 260px;
	height: 50px;
	text-align: center;
}

.centro {
	padding: 5px;
	overflow: hidden;
}
</style>
{% endblock %}

{% block selectTable %} 
<ol id="selectable">
	<li class="ui-state-default">
		<div>Elemento 1</div>
	</li>
	<li class="ui-state-default">
		<div>Elemento 2</div>
	</li>
	<li class="ui-state-default">
		<div>Elemento 3</div>
	</li>
</ol>
{% endblock %}

{% block selectTableJquery %}
    <script>
    $(document).ready(function() {    
                $("#selectable").selectable({
                    stop: function() {
                        $( "#select-result" ).val('');
                        $( ".ui-selected", this ).each(function() {
                            var index = $( this ).data( 'idelement' );
                            $( "#select-result" ).val($( "#select-result" ).val() + "#" + ( index ));
                        });
                    }
                });
            });
    
    </script>
{% endblock %}