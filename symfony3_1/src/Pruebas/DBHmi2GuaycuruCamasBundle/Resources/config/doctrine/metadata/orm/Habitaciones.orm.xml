<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Habitaciones" table="habitaciones">
    <indexes>
      <index name="idx_fk_habitaciones_id_sala" columns="id_sala"/>
    </indexes>
    <unique-constraints>
      <unique-constraint name="idx_unique_nombre_id_sala" columns="nombre,id_sala"/>
    </unique-constraints>
    <id name="idHabitacion" type="integer" column="id_habitacion">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nombre" type="string" column="nombre" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="sexo" type="boolean" column="sexo" nullable="false">
      <options>
        <option name="comment">1=hombre; 2=mujer; 3=indeterminado</option>
      </options>
    </field>
    <field name="edadDesde" type="boolean" column="edad_desde" nullable="false">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="edadHasta" type="boolean" column="edad_hasta" nullable="false">
      <options>
        <option name="default">255</option>
      </options>
    </field>
    <field name="tipoEdad" type="string" column="tipo_edad" length="1" nullable="false">
      <options>
        <option name="fixed">1</option>
        <option name="comment">1=años; 2=meses; 3=días; 4=horas; 5=minutos; 6=ignora</option>
      </options>
    </field>
    <field name="cantCamas" type="smallint" column="cant_camas" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">cantidad de camas de la habitacion</option>
      </options>
    </field>
    <field name="baja" type="boolean" column="baja" nullable="false">
      <options>
        <option name="comment">0 = habilitada; 1 = baja</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="fechaModificacion" type="datetime" column="fecha_modificacion" nullable="false">
      <options>
        <option name="default">CURRENT_TIMESTAMP</option>
      </options>
    </field>
    <many-to-one field="idSala" target-entity="Salas" fetch="LAZY">
      <join-columns>
        <join-column name="id_sala" referenced-column-name="id_sala"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
