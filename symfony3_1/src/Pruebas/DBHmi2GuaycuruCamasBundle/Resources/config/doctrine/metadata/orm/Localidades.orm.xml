<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Localidades" table="localidades">
    <indexes>
      <index name="idx_fk_localidades_id_dpto" columns="id_dpto"/>
      <index name="idx_nom_loc" columns="nom_loc"/>
    </indexes>
    <unique-constraints>
      <unique-constraint name="idx_unique_cod_loc_cod_dpto_cod_prov_cod_pais" columns="cod_loc,cod_dpto,cod_prov,cod_pais"/>
    </unique-constraints>
    <id name="idLocalidad" type="integer" column="id_localidad">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="idDpto" type="integer" column="id_dpto" nullable="true">
      <options>
        <option name="unsigned">1</option>
      </options>
    </field>
    <field name="nomLoc" type="string" column="nom_loc" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="codLoc" type="string" column="cod_loc" length="2" nullable="false">
      <options>
        <option name="fixed">1</option>
      </options>
    </field>
    <field name="codDpto" type="string" column="cod_dpto" length="3" nullable="false">
      <options>
        <option name="fixed">1</option>
      </options>
    </field>
    <field name="codProv" type="string" column="cod_prov" length="2" nullable="false">
      <options>
        <option name="fixed">1</option>
      </options>
    </field>
    <field name="codPais" type="string" column="cod_pais" length="3" nullable="false">
      <options>
        <option name="fixed">1</option>
      </options>
    </field>
    <field name="codPostal" type="string" column="cod_postal" length="4" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
